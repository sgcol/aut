  <!-- End plugin js for this page-->
  <!-- inject:js -->
  <script src="js/off-canvas.js"></script>
  <script src="js/misc.js"></script>
  <!-- endinject -->
  <!-- Custom js for this page-->
  <script src="js/base.js"></script>
  <script src="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
  <!-- End custom js for this page-->
</body>
<script>

function statusHtmlfy(s) {
  if (s=='created') return `<label class="badge badge-gradient-info">创建</label>`;
  if (s=='completed') return `<label class="badge badge-gradient-success">完成</label>`
  if (s.indexOf('failed')>=0 ||s.indexOf('失败')>=0) return `<label class="badge badge-gradient-danger">${s}</label>`
  return `<label class="badge badge-gradient-warning">${s}</label>`
}
<% if (acl=='admin') {%>
function forceconfirm(orderid) {
  accIntf('/admin/confirmOrder', {orderid:orderid}, (err)=>{
    if (err) return showerr(err);
    refreshOrderList()
  });
}
<% } %>

function refund(orderid) {
  accIntf('/forecore/admin/refund', {orderid:orderid}, (err)=>{
    if (err) return showerr(err);
    refreshOrderList();
  })
}
function sendNotify(orderid) {
  accIntf('/admin/notifyMerchant', {orderid:orderid}, (err)=>{
    if (err) return showerr(err);
    refreshOrderList()
  });
}
function refreshOrderList() {
  var allclear=true, querys={};
  $('#params input').each(function(idx, ele) {
    var je=$(ele), jv=je.val();
    if (ele.name=='dates') {
      if ($('input[name="dates"]').val()) {
        var drp=$('input[name="dates"]').data('daterangepicker');
        querys.from=drp.startDate._d;
        querys.to=drp.endDate._d;
      }
    }
    else querys[ele.name]=jv.trim();
  });
  if (allclear) $('#orderlist').bootstrapTable('refresh', {query:querys});
}
function showProvider(v) {
  return v||'unknown';
}
function showProviderOrderId(v, record) {
  return v||record.merchantOrderId;
}
function showOp(v, o) {
  var ret=`<form class="form-inline"><button class="btn resend btn-outline-primary btn-icon-sm tooltipfy mr-sm-2" title="重发通知""><i class="mdi mdi-replay"></i></button>`;
  <% if (forecoreOnly) { %>
      ret+=`<button class="btn refund btn-outline-warning btn-icon-sm tooltipfy mr-sm-2" title="退单"><i class="mdi mdi-send"></i></button>`
  <% } %>
  <% if (acl=='admin') { %>
    ret+=`<button class="btn confirm btn-outline-danger btn-icon-sm tooltipfy mr-sm-2" title="强制结单"><i class="mdi mdi-archive"></i></button>`;
  <% } %>
    ret+='</form>'
  return ret;
}
window.ops={
  'click .resend':(e, v, r, idx)=> {
    e.preventDefault();
    e.stopPropagation();
    sendNotify(r._id);
  },
  'click .refund':(e, v, r, idx)=>{
    e.preventDefault();
    e.stopPropagation();
    refund(r._id);
  },
  <% if (acl=='admin') {%>
  'click .confirm':(e, v, r, idx)=>{
    e.preventDefault();
    e.stopPropagation();
    forceconfirm(r._id);
  }
  <% } %>
}
function getProp(o, path) {
  if (typeof path=='string') {
    path=path.split('.');
  }
  var out=o;
  for (var i=0; i<path.length; i++) {
    var p=path[i];
    if (out[p]) out=out[p];
    else return null; 
  }
  return out;
}
<% if (acl=='admin'||acl=='manager') { %>
function showDetail(index, row) {
  var data=$('#orderlist').bootstrapTable('getData');
  data=data[index];
  if (!data.snappay_account) return '<p>--</p>'
  var ret=`<p>snappay_account:${getProp(data, 'snappay_account.name')} ${getProp(data, 'snappay_account.supportedCurrency')} ${Math.floor(getProp(data, 'snappay_account.succrate')*100)}% ${getProp(data, 'snappay_account.total')}</p>
  <p>partner return ${JSON.stringify(data.merchant_return)}</p>
  `
  return ret;
}
<% } %>

window.initpage=()=>{
  $('#orderlist').bootstrapTable();
  $('input[name="dates"]').daterangepicker(
  {
      autoUpdateInput: false,
      locale: {
          cancelLabel: 'Clear'
      }
  });
  $('input[name="dates"]').on('apply.daterangepicker', function(ev, picker) {
      $(this).val(picker.startDate.format('MM/DD/YYYY') + ' - ' + picker.endDate.format('MM/DD/YYYY'));
  });

  $('input[name="dates"]').on('cancel.daterangepicker', function(ev, picker) {
      $(this).val('');
  });

};
  
</script>
</html>
