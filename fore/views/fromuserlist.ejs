</head>
<body>
  <div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
    <%- include ../partials/_navbar.html %>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      <!-- partial:partials/_sidebar.html -->
      <% if (acl=="admin"||acl=="manager") { %>
        <%- include ../partials/_sidebar.html %>
      <% } else { %>
        <%- include ../partials/_sidebar2.html %>
      <% } %>
      <!-- partial -->
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="page-header">
            <h3 class="page-title">
              充值订单
            </h3>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">明细</a></li>
                <li class="breadcrumb-item active" aria-current="page">充值订单</li>
              </ol>
            </nav>
          </div>
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">充值订单</h4>
                    <div class="buttons-toolbar">
                      <form class="form-inline" id="params">
                        <div class="input-group input-group-sm">
                          <div class="input-group-prepend">
                            <span class="input-group-text bg-secondary text-white"><i class="mdi mdi-account-box"></i></span>
                          </div>
                          <input type="text" class="form-control mr-sm-2" placeholder="商户订单号" name="outOrderId">
                        </div>
                        <div class="input-group input-group-sm">
                          <div class="input-group-prepend">
                            <span class="input-group-text bg-secondary text-white"><i class="mdi mdi-calendar-today"></i></span>
                          </div>
                          <input type="text" class="form-control mr-sm-2" name="dates" placeholder="时间">
                        </div> 
                        <div class="form-group">
                          <a class="btn btn-sm btn-secondary" style="width:80px" href="javascript:refreshOrderList();"><i class="mdi mdi-magnify"></i></a>
                        </div>
                      </form> 
                    </div>
                    <div class="table-responsive">
                      <table id="orderlist"
                        class="table table-hover"
                        data-classes="table-no-bordered table-hover"
                        data-pagination="true"
                        data-side-pagination="server"
                        data-pagination="true"
                        data-show-refresh="true"
                        data-show-columns="true"
                        data-show-pagination-switch="true"
                        data-page-size="25"
                        data-buttons-class=" btn-sm btn-secondary"
                        data-url="admin/listOrders"
                        data-toolbar=".buttons-toolbar"
                        data-sort-order="desc"
                        data-sort-name="time"
                        <% if (acl=='admin'||acl=='manager') { %> 
                        data-detail-view="true"
                        data-detail-formatter="showDetail"
                        <% } %>
                        >
                         <thead>
                           <tr>
                             <th data-field="mername">
                               商户
                             </th>
                             <th data-field="merchantOrderId">
                               商户单号
                             </th>
                             <th data-field="provider" data-formatter="showProvider">
                               提供商
                             </th>
                             <th data-field="providerOrderId">
                               提供商单号
                             </th>
                             <th data-field='type'>
                               类型
                             </th>
                             <th data-field="money">
                               金额
                             </th>
                             <th data-field="time" data-formatter="timestring" data-sort-order="desc" data-sortable="true">
                               创建时间
                             </th>
                             <th data-field="status" data-formatter="statusHtmlfy">
                               状态
                             </th>
                             <th data-field="lasttime" data-formatter="timestring">
                               改变时间
                             </th>
                             <th data-formatter="showOp" data-events="ops">
                               操作
                             </th>
                           </tr>
                         </thead>
                       </table>
                    </div>  
                  </div>
                </div>
              </div>
          </div>
          <div class="row"></div>
          <div class="row"></div>
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
        <%- include ../partials/_footer.html %>
        <!-- partial -->
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->

  <!-- plugins:js -->
  <script src="vendors/js/vendor.bundle.base.js"></script>
  <script src="vendors/js/vendor.bundle.addons.js"></script>
  <!-- endinject -->
