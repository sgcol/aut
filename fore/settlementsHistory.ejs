  <!-- Custom js for this page-->
  <script src="js/base.js"></script>
  <script src="js/ejs.js"></script>
  <script src="js/admin.js"></script>
  <script src="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.js"></script>
  <script src="https://unpkg.com/bootstrap-table@1.15.5/dist/extensions/group-by-v2/bootstrap-table-group-by.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
  <script src="js/FileSaver.min.js"></script>
  <!-- End custom js for this page-->
</body>
<script>
  function queryParams(params) {
    return params;
  }
  function getlist() {
    $('#statement').bootstrapTable('refresh');
  }
  function showTime(value, record) {
    return timestring(Number(record));
  }
  function showDownLink(value, record) {
    return `<a href="forecore/admin/downloadSettle?id=${record}">下载</a>`
  }
  var response;
  function handleResponse(res) {
      response=res;
      return res;
  }
  function showTotalCount(data) {
    return response?response.total:'';
  }
</script>
</html>
