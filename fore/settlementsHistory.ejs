  .wrong {
    border-bottom-color: red;
  }
</style>
</head>
<body>
  <!-- dialogs  -->  
  <div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
    <%- include partials/_navbar.html %>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      <!-- partial:partials/_sidebar.html -->
      <%- include partials/_sidebar.html %>
      <!-- partial -->
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="page-header">
            <h3 class="page-title">
              <span class="page-title-icon bg-gradient-primary text-white mr-2">
                <i class="fab fa-alipay"></i>
              </span>
              出款记录
            </h3>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Settlements</a></li>
              </ol>
            </nav>
          </div>
          <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <div class="buttons-toolbar form-inline">
                      </div>
                      <div class="table-responsive">
                      <table class="table table-hover" id="statement"
                        data-toggle="table"
                        data-classes="table-no-bordered table-hover"
                        data-side-pagination="server"
                        data-pagination="true"
                        data-show-refresh="true"
                        data-show-columns="true"
                        data-show-pagination-switch="true"
                        data-buttons-class=" btn-sm btn-secondary"
                        data-url="forecore/admin/settlements"
                        data-query-params="queryParams"
                        data-toolbar=".buttons-toolbar"
                        data-response-handler="handleResponse"
                        data-show-footer="true">
                        <thead>
                          <th data-field="_" data-sortable="true" data-formatter="showTime" data-footer-formatter="Total">时间</th>
                          <th data-field="_" data-formatter="showDownLink" data-footer-formatter="showTotalCount">下载</th>
                        </thead>
                        <tbody id="list">
                        </tbody>
                      </table>
                    </div>
                    </div>
                  </div>
                </div>
          </div>
          <div class="row">
          </div>
          <div class="row">
          </div>
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
        <%- include partials/_footer.html %>
        <!-- partial -->
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
