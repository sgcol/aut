<!DOCTYPE html>
<html lang="en">

<head>
    <title>APay 四方支付演示</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="images/favicon.png" />
    <link rel="stylesheet" href="vendors/iconfonts/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" type="text/css" href="fonts/iconic/css/material-design-iconic-font.min.css">
    <link href="https://unpkg.com/bootstrap-table@1.14.2/dist/bootstrap-table.min.css" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- inject:css -->
    <link rel="stylesheet" href="css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="images/favicon.png" />
  </head>

<body>
    <!-- dialogs  -->
  <!-- export bank transfer files  -->
  <div class="modal fade" id="qrDlg" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="qrDlg" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content card" style="background-color:#fff; border-radius:0.3125rem">
        <div class="modal-header">
          <h5 class="card-title">微信扫码</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="card-body">
          <div id="qrcode" style="text-align:center;">
            <canvas id="code"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
        <%- include partials/_navbar.html %>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      <!-- partial:partials/_sidebar.html -->
        <%- include partials/_sidebar.html %>
      <!-- partial -->
      <div class="main-panel">        
        <div class="content-wrapper">
          <div class="page-header">
            <h3 class="page-title">
              <span class="page-title-icon bg-gradient-primary text-white mr-2">
                <i class="mdi mdi-cash-multiple"></i>                 
              </span>
              支付演示
            </h3>
            <nav aria-label="breadcrumb">
              <ul class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">
                  <span></span>Demo
                  <i class="mdi mdi-cash-multiple icon-sm text-primary align-middle"></i>
                </li>
              </ul>
            </nav>
          </div>
          <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">支付</h4>
                  <form class="forms-sample" action="/order">
                    <div class="form-group">
                      <label for="name">合作商户</label>
                      <select class="form-control" id="name"></select>
                    </div>
                    <div class="form-group">
                      <label for="merchantid">商户号</label>
                      <input type="text" class="form-control" id="merchantid" placeholder="merchantid">
                    </div>
                    <div class="form-group">
                      <label for="key">玩家id</label>
                      <input type="text" class="form-control" id="userid" placeholder="userid">
                    </div>
                    <div class="form-group">
                      <label for="key">商户key</label>
                      <input type="text" class="form-control" id="key" placeholder="key">
                    </div>
                    <div class="form-group">
                      <label for="money">充值钱数</label>
                      <input type="" class="form-control" id="money" placeholder="">
                    </div>
                    <div class="form-group">
                      <label for="type">类型</label>
                      <select type="" class="form-control" id="type">
                        <option value="WECHATPAYH5">WECHATPAYH5</option>
                        <option value="ALIPAYH5">ALIPAYH5</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="account">收款账号</label>
                      <select class="form-control" id="account">
                        <option selected>自动选择</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="currency">币种</label>
                      <select class="form-control" id="currency">
                        <option selected>CAD</option>
                        <option >USD</option>
                        <option>CNY</option>
                      </select>
                    </div>

                    <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">历史记录</h4>
                <table                            
                class="table table-hover"
                data-toggle="table"
                data-classes="table-no-bordered table-hover"
                data-pagination="true"
                data-side-pagination="server"
                data-pagination="true"
                data-show-refresh="true"
                data-show-columns="true"
                data-show-pagination-switch="true"
                data-page-size="25"
                data-buttons-class=" btn-sm btn-secondary"
                data-ajax="queryOrders"
                data-toolbar=".buttons-toolbar"
                data-sort-name="time"
                data-sort-order="desc"
                >
                <thead>
                  <th data-field="_id">订单号</th>
                  <th data-field="merchantOrderId">发起订单</th>
                  <th data-field="providerOrderId">提供商订单</th>
                  <th data-field="provider" data-visible="false">提供商</th>
                  <th data-field="mername">商户</th>
                  <th data-field="mer_userid" >用户id</th>
                  <th data-field="money" >金额</th>
                  <th data-field="currency" >币种</th>
                  <th data-field="status" >状态</th>
                  <th data-field="time" data-formatter="timestring"  data-sortable="true">时间</th>
                </thead>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
        <%- include partials/_footer.html %>
        <!-- partial -->
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <!-- plugins:js -->
  <script src="vendors/js/vendor.bundle.base.js"></script>
  <script src="vendors/js/vendor.bundle.addons.js"></script>
  <!-- endinject -->
  <!-- inject:js -->
  <script src="js/off-canvas.js"></script>
  <script src="js/misc.js"></script>
  <script src="js/md5.js"></script>
  <script src="js/qs.js"></script>
  <script src="js/base.js"></script>
  <script src="https://unpkg.com/bootstrap-table@1.14.2/dist/bootstrap-table.min.js"></script>
  <script src="js/qrcode.min.js"></script>
  <!-- endinject -->
</body>
<script>
$(()=>{
  var data;
  var s=$('#name');
  s.change(function(e) {
    var item=data[this.value];
    if (item) {
      $('#merchantid').val(item.merchantid);
      $('#key').val(item.key);
      fillAccounts(item.name);
    } else {
      $('#merchantid').val('');
      $('#key').val('');
    }
  })
  var acc_data;
  $('#account').change(function (e){
    var item=acc_data[this.value];
    if (item) {
      $('#currency').val(item.supportedCurrency);
    } else $('#currency').val('CAD');
  })
  function fillAccounts(belongs) {
    accIntf('pvd/snappay_base/availbeAccounts', {belongs:belongs}, (err, r)=>{
      if (err) return;
      var accounts=$('#account');
      accounts.empty().append('<option selected value="">自动选择</option');
      acc_data={};
      r.rows.forEach((item)=>{
        acc_data[item._id]=item;
        accounts.append(`<option value="${item._id}">${item.name+(item.disable?'(disabled)':'')}</option>`);
      })
    })
  }
  accIntf('admin/listAccount', {identity:'merchant'}, (err, res)=>{
    if (err) return;
    data=res.rows;
    var i=0;
    res.rows.forEach((item)=>{
      s.append($('<option>', { 
        value: i,
        text : item.name 
      }));
      i++;
    })
    $('#merchantid').val(data[0].merchantid);
    $('#key').val(data[0].key);
    fillAccounts(data[0].name);
  });
  $('form').submit((e)=>{
    e.preventDefault();
    var btn=$('form button[type="submit"]');
    var oldText=btn.text();
    btn.text('Working...');
    // $('#qrcode').empty();
    var now=new Date();
    var params={
        account:$('#account').val(),
        cb_url:location.origin+'/demo/result',
        currency:$('#currency option:selected').text(),
        money:Number($('#money').val()),
        outOrderId:'TESTORDER'+now.getTime(),
        partnerId:$('#merchantid').val(),
        return_url:location.href,
        time:now.getTime(),
        type:$('#type').val()||'',
        userId:$('#userid').val(),
    };
    if (!params.userId || !params.money) return alert('请正确填写参数');
    var key=$('#key').val();
    params.sign=md5(key+Qs.stringify(params));
    accIntf('/forecore/order', params, (err, r)=>{
      btn.text(oldText);
      console.log(err, r);
      if (err) return alert(err);
      QRCode.toCanvas(document.getElementById('code'), r.url, (err)=>{
        if (err) return alert(err);
        $('#qrDlg').modal('show');
      });
      // var qrcode = new QRCode("qrcode", {
      //     text: r.url,
      //     width: 256,
      //     height: 256,
      //     colorDark : "#333",
      //     colorLight : "#ffffff",
      //     correctLevel : QRCode.CorrectLevel.H
      // });
    });
    // make sure all interface working correctly
    // var p2={currency:params.currency, partnerId:params.partnerId, payment:'WECHATPAYH5'};
    // p2.sign=md5(key+Qs.stringify(p2));
    // accIntf('/forecore/exchangeRate', p2, console.log.bind(console));
  })
});
function queryOrders(params) {
  accIntf('/admin/listOrders', Object.assign({testOrderOnly:true}, params.data), function(err, r) {
    if (err) return;
    params.success(r);
  });
}
</script>
</html>
